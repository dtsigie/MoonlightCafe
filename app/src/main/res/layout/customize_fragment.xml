<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/burger_item_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:text="Pizza"
        android:gravity="center"
        android:textAllCaps="true"
        android:padding="10dp"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:text="Quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25dp"
        android:padding="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/subtract_button_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"/>
        <TextView
            android:id="@+id/burger_quantity_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="25sp"
            android:gravity="center"
            android:text="20"/>
        <Button
            android:id="@+id/add_button_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Options"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/burger_lettuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepperoni"/>
        <CheckBox
            android:id="@+id/burger_tomatoes"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black Olives"/>
        <CheckBox
            android:id="@+id/pizza_bacon"
            android:layout_below="@id/burger_lettuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bacon"/>
        <CheckBox
            android:id="@+id/pizza_onion"
            android:layout_below="@id/pizza_bacon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onion"/>
        <CheckBox

            android:layout_alignParentRight="true"
            android:layout_below="@id/burger_tomatoes"
            android:id="@+id/sausage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sausage"/>
        <CheckBox
            android:id="@+id/mushroom"
            android:layout_below="@id/sausage"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mushroom"/>
    </RelativeLayout>


</LinearLayout>